<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lectureLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="150px"
    android:layout_marginVertical="50px"
    android:orientation="vertical"
    android:background="@drawable/dropshadow">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lectureName"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:text="강의명" />

        <TextView
            android:id="@+id/lectureTime"
            android:layout_width="150dp"
            android:layout_height="50px"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:text="강의시간" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_classView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/ch_lecture"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:text="오늘의 강의"
        android:textSize="30px"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_lecture"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="200dp"
        android:text="자세히"
        android:visibility="visible" />

</LinearLayout>